{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": false,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "target": "ES5",
      "allowJs": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "typeRoots": [
        "./types",
        "node_modules/@types"
      ],
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
      ],
      "baseUrl": "./src/common",
      "paths": {
        "app/*": ["app/*"],
        "containers/*": ["containers/*"],
        "components/*": ["components/*"],
        "pages/*": ["pages/*"],
        "routes/*": ["routes/*"],
        "stores/*": ["stores/*"],
      }
    },
    "files": [
      "types/index.d.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "include": [
      "./src/**/*"
    ]
}